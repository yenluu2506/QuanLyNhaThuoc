@model IEnumerable<HieuThuoc.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 style="text-align: center"><FONT color="#FF000">MENU</FONT></h2>
        <div class="form-group">
            <a href="/menus/create" class="btn btn-primary">Thêm mới</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table table class="table table-hover display" style="width: 100%;color:black;">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.ID">
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "far fa-edit btn btn-outline-success" })

                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { onclick = "return confirm('bạn muốn xóa?');", @class = "far fa-trash-alt btn btn-outline-success" })
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
