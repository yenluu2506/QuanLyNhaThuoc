@model IEnumerable<HieuThuoc.Models.OrderDetailEntity>

@{
	/**/

	ViewBag.Title = "CancelOrder";
	Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
}

<div class="row">
	<div class="col-md-12">

		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Quantity)
				</th>
				@*<th>
						@Html.DisplayNameFor(model => model.ItemId)
					</th>*@
				<th>
					@Html.DisplayNameFor(model => model.OrderID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Totalprice)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Item.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Item.Picture)
				</th>

			</tr>
			@foreach (var item in Model)
			{
				<tr>

					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
					@*<td>
							@Html.DisplayFor(modelItem => item.ItemId)
						</td>*@
					<td>
						@Html.DisplayFor(modelItem => item.OrderID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Totalprice)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Item.Name)
					</td>
					<td>
						<img class="resize-image-cart" src="~/img/Item/@Html.DisplayFor(modelItem => item.Item.Picture)" />
					</td>
				</tr>
			}

		</table>

	</div>
</div>
<div class="col-md-12">

	@using (Html.BeginForm("CancelOrder", "AuraStore", FormMethod.Post, new
	{
		enctype = "multipart/form-data"
	}))
	{
		@Html.AntiForgeryToken()
	<div class="container" align="center">

		<div class="col-md-5">
			<input type="text"
				   id="id"
				   name="id"
				   value="@ViewBag.id"
				   class="form-control" readonly />
		</div>
		<br/>
		<div>
			<textarea placeholder="Reasion" required></textarea>
			
		</div>



			<input type="submit" value=" Cancel " title="Save" class="btn btn-primary" />



		</div>

		}




	</div>

