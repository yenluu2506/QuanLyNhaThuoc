@model IEnumerable<HieuThuoc.Models.Blog>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h2 style="text-align: center"><FONT color="#FF000">TIN TỨC</FONT></h2>
        <div class="form-group">
            <a href="/blogs/create" class="btn btn-primary">Thêm mới</a>
        </div>
    </div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
                    <tr>
                        <th>
                            Ảnh
                        </th>
                        <th>
                            Tiêu Đề
                        </th>
                        <th>
                            Ngày Đăng
                        </th>
                        <th>
                            Chi Tiết
                        </th>
                        <th>
                            Mô Tả
                        </th>
                        <th>
                        </th>
                    </tr>
				</thead>
				<tbody>

					@foreach (var item in Model)
					{
                        <tr>
                            <td>
                                <img width="100" height="100" src="~/img/Item/@Html.DisplayFor(modelItem => item.Picture)" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateImport)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Describe)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShortTitle)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "far fa-edit btn btn-outline-success" })

                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-outline-success" })
                                @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { onclick = "return confirm('bạn muốn xóa?');", @class = "far fa-trash-alt btn btn-outline-success" })
                            </td>
                        </tr>
					}

				</tbody>
			</table>
		</div>
	</div>
</div>